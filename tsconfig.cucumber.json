{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "esModuleInterop": true,
    "strict": true,
    "types": ["node", "@cucumber/cucumber", "playwright"]
  },
  "include": ["tests/**/*.ts", "tests/**/*.cts"],
  "exclude": ["node_modules"]
}
