{
  "name": "bdd-ng-app",
  "version": "1.0.0",
  "private": true,
  "license": "0BSD",
  "description": "A simple Angular 19 project demonstrating Behavior-Driven Development (BDD) using Cucumber.js and Playwright. This project is meant to serve as a learning resource showcasing the integration of end-to-end testing with modern web development practices.",
  "keywords": [
    "angular",
    "cucumber-js",
    "playwright",
    "bdd",
    "end-to-end-testing",
    "e2e",
    "testing",
    "typescript",
    "javascript",
    "web-development",
    "angular-cli",
    "automation",
    "living-documentation",
    "training"
  ],
  "homepage": ".",
  "repository": "github:code-chimp/bdd-ng-app",
  "author": {
    "name": "Tim Goshinski",
    "email": "tim@code-chimp.com",
    "url": "https://code-chimp.com"
  },
  "volta": {
    "node": "22.14.0"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "e2e:install": "npx playwright install",
    "test:e2e": "cross-env TS_NODE_PROJECT=tsconfig.cucumber.json cucumber-js",
    "test:spec": "ng test",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "run-p lint:*",
    "lint:ts": "eslint ./src/**/**.ts",
    "fix:ts": "eslint ./src/**/**.ts* --fix",
    "lint:styles": "stylelint \"./src/**/*.css\"",
    "fix:styles": "stylelint \"./src/**/*.css\" --fix"
  },
  "dependencies": {
    "@angular/common": "^19.2.6",
    "@angular/compiler": "^19.2.6",
    "@angular/core": "^19.2.6",
    "@angular/forms": "^19.2.6",
    "@angular/platform-browser": "^19.2.6",
    "@angular/platform-browser-dynamic": "^19.2.6",
    "@angular/router": "^19.2.6",
    "@tailwindcss/postcss": "^4.1.4",
    "postcss": "^8.5.3",
    "rxjs": "~7.8.2",
    "tailwindcss": "^4.1.4",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.7",
    "@angular/cli": "^19.2.7",
    "@angular/compiler-cli": "^19.2.6",
    "@cucumber/cucumber": "^11.2.0",
    "@cucumber/pretty-formatter": "^1.0.1",
    "@eslint/js": "^9.24.0",
    "@eslint/json": "^0.11.0",
    "@eslint/markdown": "^6.3.0",
    "@playwright/test": "^1.51.1",
    "@types/cucumber": "^7.0.3",
    "@types/jasmine": "~5.1.7",
    "@types/karma": "~6.3.9",
    "@types/karma-chrome-launcher": "~3.1.4",
    "@types/karma-coverage": "~2.0.3",
    "@types/karma-jasmine": "~4.0.5",
    "@types/karma-jasmine-html-reporter": "~1.7.3",
    "@types/node": "^22.14.1",
    "browserslist": "^4.24.4",
    "cross-env": "^7.0.3",
    "cucumber-html-reporter": "^7.2.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "globals": "^16.0.0",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.51.1",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "stylelint": "^16.18.0",
    "stylelint-config-recommended": "^16.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1"
  }
}
